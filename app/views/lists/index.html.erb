<br>
<div class="container d-flex justify-content-between">
    <h1>lists</h1>
    <div><%= link_to 'add new item', new_list_path , :class => "btn btn-primary btn-lg"%></div>
</div>

<table class="table table-primary" style="width: 80%">
    <tr>
        <th>ID</th>
        <th>Content</th>
        <th>Check</th>
    </tr>
    <% @lists.each do |list| %>
        <% if list.compeleted %>
            <tr>
                <td><%= list.id %></td>
                <td class="striker fs-5"><%= link_to list.content, edit_list_path(list)%></td>
                <td class="fs-5"><p>finished</p></td>
                <td><%= link_to 'show', list_path(list), :class =>"btn btn-outline-dark btn-lg px-5", :style => "width:200px" %>
                    <%= link_to 'edit', edit_list_path(list), :class =>"btn btn-outline-dark btn-lg px-5", :style => "width:200px"%>
                    <%= link_to 'destroy', list_path(list), :class =>"btn btn-outline-dark btn-lg px-5",:style => "width:200px",
                    data: { turbo_method: 'delete', turbo_confirm: 'Are you sure? '}%>
                </td>
            </tr>
        <% else %>
            <tr class="table-light">
                <td><%= list.id %></td>
                <td class="fs-5"><%= link_to list.content, edit_list_path(list) %></td>
                <td class="fs-5"><p>in progress...</p></td>
                <td><%= link_to 'show', list_path(list), :class =>"btn btn-outline-dark btn-lg px-5", :style => "width:200px" %>
                <%= link_to 'edit', edit_list_path(list), :class =>"btn btn-outline-dark btn-lg px-5", :style => "width:200px" %>
                <%= link_to 'destroy', list_path(list), :class =>"btn btn-outline-dark btn-lg px-5", :style => "width:200px",
                    data: { turbo_method: 'delete', turbo_confirm: 'are you serious? マジで？'}%>
                </td>
            </tr>
        <% end %>
    <% end %>
    
</table>